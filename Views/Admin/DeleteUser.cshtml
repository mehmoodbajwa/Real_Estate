@model List<RealEstate.Models.User>
@{
    ViewBag.Title = "DeleteUser";
    ViewBag.IsAdmin = "T";
}

<div id="mainBody" style="margin-left:30px;min-height:350px ;">
    <div class="container">
        <div class="row">
            <h3> Approve these Properties </h3>
            <div class="well">
                <table border="1" width="100%">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Pass</th>
                        <th>Email</th>
                        <th>Question</th>
                        <th>Answer</th>
                        <th>Action</th>
                    </tr>

                    @{
                        foreach (var pro in Model)
                        {

                                <tr>
                                    <td>@pro.Id</td>
                                    <td>@pro.Name</td>
                                    <td>@pro.Pass</td>
                                    <td>@pro.Email</td>
                                    <td>@pro.Question</td>
                                    <td>@pro.Answer</td>
                                    <td><a href="@Url.Action("DeleteU", "Admin", new { uid = pro.Id })" role="button" data-toggle="modal" style="padding-top:10px;"><span class="btn btn-large btn-success">Delete</span></a></td>
                                </tr>
                        }

                    }

                </table>
            </div>
        </div>
    </div>
</div>
